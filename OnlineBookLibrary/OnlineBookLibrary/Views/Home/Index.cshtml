@model IEnumerable<OnlineBookLibrary.Models.Book>
@{
    ViewBag.Title = "Home Page";
}
<h3>Online Book Library</h3>
<a href="Home/Create" class="btn btn-primary" style="margin-left:20px;">Create New</a>
<div class="container">

    @foreach (var book in Model)
    {
        <div class="row" style="display:inline-block; margin:0px;">
            <div class="col-sm-4" style="border:1px solid #e5e5e5; padding:-5px; width:100%; height:490px; margin:10px 2px;">
                <div class="card" style="width:320px; margin-top:20px;">
                    <img class="card-img-top" src="~/Images/@(book.Image !=null ?  "Books/" +book.Image : "no_image.png")" alt="Card image" style="width:100%;height:200px;">
                    <div class="card-body">
                        <h4 class="card-title" ; style="font-weight:bold">@book.Name</h4>
                        <p class="card-text" style="height:100px;width:100%; overflow:hidden;">@book.Details</p>
                        <p style="font-weight:600; font-size:18px">@book.Author</p>
                        <p style="font-weight:600">@book.Price AZN</p>
                        <a href="Home/Details?id=@book.Id" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


